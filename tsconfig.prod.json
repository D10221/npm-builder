{
    "compilerOptions": {
        "target": "es5", 
        "module": "commonjs", 
        "outDir": "./dist", 
        "lib": [
            "es2015"
        ],
        "noImplicitAny": true,         
        "noImplicitThis": true, 
        "alwaysStrict": true,         
        "noUnusedLocals": true, 
        "noUnusedParameters": true, 
        "noImplicitReturns": true, 
        "noFallthroughCasesInSwitch": true
    },
    "include": [
      "./src/**/*.ts"  
    ]
}